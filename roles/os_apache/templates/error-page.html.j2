<!-- {{ ansible_managed }} at {{ ansible_date_time.date }} {{ ansible_date_time.time }} -->
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    {%- if item.code is defined and item.code|string|length > 0 -%}
      {{ item.code }} {{ item.title }}
    {%- else -%}
      {{ item.title }}
    {%- endif -%}
  </title>
  <style>
    body { font-family: Arial, sans-serif; background:#f8f9fa; color:#212529; margin:0; display:flex; align-items:center; justify-content:center; min-height:100vh; }
    .card { max-width: 640px; padding:32px; background:#fff; border:1px solid #dee2e6; border-radius:8px; box-shadow:0 2px 8px rgba(0,0,0,0.05); }
    h1 { margin:0 0 12px; font-size:28px; }
    p { margin:0; line-height:1.5; }
  </style>
</head>
<body>
  <div class="card">
    <h1>
      {%- if item.code is defined and item.code|string|length > 0 -%}
        {{ item.code }} {{ item.title }}
      {%- else -%}
        {{ item.title }}
      {%- endif -%}
    </h1>
    <p>{{ item.message }}</p>
  </div>
</body>
</html>
